<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/gray2"
    app:cardCornerRadius="0dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_in_namatour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Turnamen"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/gray1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_in_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nickname mengajak anda untuk bergabung dalam timnya."
                    android:textColor="@color/white"
                    android:textSize="15dp" />


            </LinearLayout>

            <TextView
                android:id="@+id/tv_in_tgl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:text="tgl"
                android:textColor="@color/gray"
                android:textSize="13dp" />


        </LinearLayout>

        <!--<TextView-->
            <!--android:layout_width="2dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:background="@color/gray" />-->
        <ImageView
            android:id="@+id/iv_in_pamflet"
            android:layout_margin="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp" />

    </LinearLayout>


</android.support.v7.widget.CardView>