                                android:layout_height="wrap_content"
                                android:paddingTop="13dp"
                                android:paddingBottom="13dp"
                                android:text="Username :"
                                android:textColor="@color/white"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <TextView
